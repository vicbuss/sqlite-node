{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "build",
    "strict": true,
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "jest.setup.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}